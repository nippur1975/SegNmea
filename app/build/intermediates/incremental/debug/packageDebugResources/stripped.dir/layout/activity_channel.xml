<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/channel1EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Channel 1"
        android:inputType="number" />

    <EditText
        android:id="@+id/channel2EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Channel 2"
        android:inputType="number" />

    <EditText
        android:id="@+id/channel3EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Channel 3"
        android:inputType="number" />

    <EditText
        android:id="@+id/channel4EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Channel 4"
        android:inputType="number" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="@string/save" />

</LinearLayout>
